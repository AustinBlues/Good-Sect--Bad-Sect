<%= link_to image_tag('new-report.png'), new_report_path %>

<%= render 'map' %>

<div id="show_raw_data_btn">Raw data</div>

<div id="raw_data">

<h1>Listing reports</h1>

<table>
  <thead>
    <tr>
      <th>Lat</th>
      <th>Lon</th>
      <th>Comment</th>
      <th>Good/Bad</th>
      <th>Datetime</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @reports.each do |report| %>
  <tr>
    <td><%= report.lat %></td>
    <td><%= report.lon %></td>
    <td><%= report.comment %></td>
    <td><%= report.good ? "Good" : "Bad" %></td>
    <td><%= report.date %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

</div>
